<% content_for :head do %>
	<title>Chapry.com</title>
	<!-- Open Graph data -->
	<meta property="og:site_name" content="chapry">
	<meta property="fb:app_id" content="984512708308216"></meta>
	<meta property="og:url" content="<%= request.original_url %>"></meta>
	<meta property="og:type" content="article">
	<meta property="og:title" content="chapry.com | Học Tiếng Anh The Fun Way">
	<meta property="og:description" content="Video Clip, Tin Tức, Trò Chơi, Bài Hát">
	<meta property="og:image" content="https://s3-ap-southeast-1.amazonaws.com/chaprycms/logo1">
<% end %>

<%= render partial: "shared/header" %>
<%= render partial: "shared/search" %>

<!-- Desktop -------------------------------------------------------------------------->
