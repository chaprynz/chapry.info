<!-- TOP LONG AD DESKTOP-->
<div class="w3-dark-grey w3-hide-medium w3-hide-small w3-main">
	<div style="max-width:1260px;margin:auto" class="w3-container">
		<div style="margin-left:50px;margin-bottom:10px">
			<img src="https://s3-ap-southeast-1.amazonaws.com/chaprycms/Google+Adsense/add+5.png"  style="">	
		</div>
	</div>
</div>

<!-- CATEGORY TABS DESKTOP-->
<%= render partial: "shared/categorytab" %>

<!-- FACEBOOK LIKE-->
<div class="w3-hide-medium w3-hide-small w3-container">
	<div style="max-width:1260px;margin:auto" class="w3-main" >
		<div style="margin-left:50px" class="w3-container">
			<div style="" class="w3-container">
				<div class="fb-like" data-href="https://www.facebook.com/chaprynz" data-layout="button_count" data-action="like" data-show-faces="false" data-share="false"></div>Kết Nối Trên FaceBook
			</div>	
		</div>	
	</div>	
</div>

<!-- E POSTS DESKTOP-->
<div class="w3-hide-medium w3-hide-small w3-main">
	<div style="max-width:1260px;margin:auto" class="w3-container">
		<div style="margin-left:50px" class="w3-container">
			<% @posts.each do |post| %>
				<%= link_to [post.subcategory, post] do %>
					<div class="w3-col l2">
						<div class="w3-margin-right content">
							<div class="w3-display-container">
								<%= image_tag post.image.url, style: "width:100%" %>
							</div>
							<div style="min-height:150px;line-height:1.2;font-size:14px" class="w3-container">
			  					<p style="margin-bottom:-10px!important;color:#9E8383;font-size:10px!important"><i class="fa fa-clock-o" aria-hidden="true"></i> <%= time_ago_in_words(post.created_at)%> ago </p>
			  					<p><%= post.title %></p>
							</div>
						</div>
					</div>
				<% end %>
			<% end %>
		</div>
	</div>
</div>


<%= render partial: "shared/footer" %>

<script>
for (var i = 0; i < document.links.length; i++) {
    if (document.links[i].href == document.URL) {
        document.links[i].className = 'active';
    }
}
</script>