
<div style="color:white;background:rgba(20, 20, 20, 0.8);max-width:360px;margin-top:100px" class="w3-padding-large w3-modal-content">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <h2>Đăng Ký</h2>
  <div class="form-field">
    
    <%= f.email_field :email, class: "w3-input  ", autofocus: true, :placeholder => "Email" %>
  </div>

  <div class="form-field">
    <% if @validatable %>
    <em>(tối thiểu <%= @minimum_password_length %> kí tự )</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "w3-input  ", :placeholder => "Mật khẩu" %>
  </div><br>
  
  <div class="form-field">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "w3-input  ", :placeholder => "Xác nhận" %>
  </div><br>

  <div class="actions">
    <%= f.submit "Đăng Ký", class: " w3-input w3-blue w3-hover-green" %>
  </div><br> 
  <div class="actions">
    ĐĂNG NHẬP VỚI&nbsp; &nbsp; 
    <a  href="#"><i style="color:#49659F;font-size:30px" class="fa fa-facebook-official" aria-hidden="true"></i></a>&nbsp; &nbsp;
    <a  href="#"><i style="color:red;font-size:30px" class="fa Example of google-plus fa-google-plus" aria-hidden="true"></i></a>
  </div><br>
  
  
  <div><%= link_to "Đăng Nhập", new_session_path(resource_name),  class: "w3-input w3-hover-green w3-blue" %></div><br>
  <div><%= link_to "Trở Lại Trang Chủ", root_path,  class: "w3-input w3-hover-green w3-blue" %></div><br>
<% end %>

</div>

