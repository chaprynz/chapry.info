<%= render partial: "shared/header" %>
<%= render partial: "shared/search" %>
<div class="bodyimage w3-hide-small w3-display-container w3-animate-opacity">
  <% @categories.where('id=1').each do |category| %>
  <%= image_tag category.logo.url, style: "width:100%" %>
  <% end %>
</div><br>
<div  class="w3-hide-small w3-main" >
	
	<div style="margin-left:42px" class="w3-container">
		<div class="w3-hide-small w3-col l9 m9 s12">
			<div style="margin-bottom:30px" class="w3-container w3-padding">
				<% @posts.each do |post| %>
						<%= link_to [post.category, post] do %>
							<div class="w3-padding  w3-col l4 m6">
								<div class="w3-card-2 w3-round content">
									<%= image_tag post.image.url, style: "width:100%" %>
									<div style="min-height:100px;line-height:1.2;font-size:12px" class="w3-padding  w3-white w3-container">
										<p style="color:red"><%= post.created_at.strftime("%d-%m-%Y") %></p>
										<p><strong><%= post.title %></strong></p>
									</div>
								</div>
							</div>	
						<% end %>
				<% end %>
				</div>
				<div class="w3-container w3-padding"><%= paginate @posts %></div>
		</div>
		<%= render partial: "shared/sidebar" %>
	</div>
</div>	

<div style="margin-top:46px" class="w3-hide-large w3-hide-medium w3-main" >
	<div  class="w3-container">
		<div class=" w3-col l9 m9 s12">
			<div style= class="w3-container w3-white  w3-padding">
				<% @categories.each do |category| %>	
						<%= link_to category do %>
							<div class="w3-padding  w3-col s6 l4 m6">
								<div  class="w3-card-1  w3-hover-shadow ">
									<%= image_tag category.image.url, style: "width:100%" %>
									
								</div>
							</div>	
						<% end %>	
				<% end %>
			</div>
		</div>
		<%= render partial: "shared/sidebar" %>
	</div>
</div>	

<%= render partial: "shared/footer" %>
