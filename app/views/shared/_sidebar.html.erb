<div style="background: rgba(0, 0, 0, 0.8)" class="w3-col l3 m3 s12  w3-hide-small ">
	<div  class="w3-container ">
		<div  class="fb-page" data-href="https://www.facebook.com/chaprynz" data-tabs="timeline" data-height="70"  data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><div class="fb-xfbml-parse-ignore"><blockquote cite="https://www.facebook.com/facebook"><a href="https://www.facebook.com/facebook">Facebook</a></blockquote></div></div>
		<% @categories.each do |category| %>
			<%= link_to category, class: "w3-hover-text-blue" do %>	
				<div class="w3-border-bottom r content w3-padding w3-container">
					<div  class="w3-col s4 m4 ">
  						<%= image_tag category.image.url, style: "width:100%" %>
					</div>
					<div style="padding-left:10px;line-height:1.2;font-size:12px" class=" w3-col s8 m8  w3-container">
					  <p ><span style="color: rgb(184, 49, 47);"><span><i class="fa fa-chevron-circle-down" aria-hidden="true"></i> <%= category.name %></span></span></strong></p>
					  <p style="color:red"><%= category.created_at.strftime("%d-%m-%Y") %></p>
					  <p style="color:lightblue"><i class="fa fa-eye" aria-hidden="true"></i> 2.6k</p>
					</div>
					<div class="content-overlay"></div>
					<div class="content-details fadeIn-bottom">
				        <h3 class="content-title"><%= category.name %></h3>
				        <p class="content-text"><%= category.description %></p>
			        </div>
				</div>
			<% end %>	
		<% end %>
		
	</div>
	
</div>

