<!-- DESKTOP -->
<div  class="w3-col l4desktop w3-hide-medium w3-hide-small">
	
	<!-- RIGHTSIDE BOX AD DESKTOP-->
	<div  class="w3-container">
		<div class="r">
			<img src="https://hbr.org/resources/pdfs/comm/xl/advideoXLcatalin600x1200.png"  style="width:100%">
		</div>
	</div><hr>
	
	<!-- RIGHTSIDE BOX RECOMENDED TINTUC DESKTOP-->
	<% @tintucs.each do |tintuc| %>
			<% if !post.hidepage? %>
				<%= link_to [tintuc.category, tintuc] do %>
					<div class="w3-margin-bottom r w3-container">
						<div  class="w3-col s4 m4 ">
			  				<%= image_tag tintuc.image.url, style: "width:100%" %>
						</div>
						<div style="padding-left:10px;line-height:1.2;font-size:16px" class="w3-col s8 m8  w3-container">
						  <p style="margin-bottom:-10px!important;color:#9E8383;font-size:12px!important"><i class="fa fa-clock-o" aria-hidden="true"></i> <%= time_ago_in_words(tintuc.created_at)%> ago </p>
						  <p><%= tintuc.title %></p>
						</div>
					</div>
				<% end %>
			<% end %>	
	<% end %>
</div>

<!-- IPAD -->
<div class="w3-container w3-hide-large w3-hide-small">
	<div class="w3-container">
		<% @tintucs.each do |tintuc| %>
			<% if !post.hide? %>
				<%= link_to [tintuc.category, tintuc] do %>
					<div class="w3-col m3">
						<div class="w3-margin-right">
							<div class=" w3-display-container">
								<%= image_tag tintuc.image.url, style: "width:100%" %>
							</div>
							<div style="min-height:136px;line-height:1.2;font-size:14px" class="w3-container">
			  					<p><%= tintuc.title %></p>
							</div>
						</div>
					</div>
				<% end %>
			<% end %>	
		<% end %>
	</div>
</div>

<!-- PHONE -->
<div class="w3-hide-medium w3-hide-large w3-container">
	<% @tintucs.each do |tintuc| %>
		<% if !post.hide? %>
			<%= link_to [tintuc.category, tintuc] do %>
				<div class="w3-col w3-padding-small s6">
					<div class="w3-container">
						<%= image_tag tintuc.image.url, style: "width:100%" %>
						<div style="min-height:60px;line-height:1.2;font-size:14px" class="w3-container">
		  					<p style="margin-bottom:-10px!important;color:#9E8383;font-size:10px!important"><i class="fa fa-clock-o" aria-hidden="true"></i> <%= time_ago_in_words(tintuc.created_at)%> ago </p>
		  					<p><%= tintuc.title %></p>
						</div>
					</div>
				</div>
			<% end %>
		<% end %>	
	<% end %>
</div>